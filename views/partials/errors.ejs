<% if(errors.length> 0){ %>
    <div class="alertBox"
        style="background: #ffeaea; border: 1px solid #d32f2f; color: #d32f2f; border-radius: 6px; padding: 14px 18px; margin-bottom: 18px; font-size: 1rem; position: relative; right: 14px;">
        <strong style="font-weight: 700; font-size: 1.08rem; display: block; margin-bottom: 6px;">Error!</strong>
        <ul style="margin-left: 18px; margin-bottom: 0; padding-left: 0;">
            <% errors.forEach(error=> { %>
                <li style="list-style: disc; margin-bottom: 2px; color: #d32f2f;">
                    <%= error %>
                </li>
                <% }) %>
        </ul>
        <span style="position: absolute; top: 8px; right: 12px; color: #d32f2f; cursor: pointer; font-size: 1.2rem;">
            <i class="fas fa-times"></i>
        </span>
    </div>
    <% } %>