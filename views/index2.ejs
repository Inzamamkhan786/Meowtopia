  <script>
    function handleSlideOnScroll() {
      const boxes = document.querySelectorAll('.slide-on-scroll');
      const triggerBottom = window.innerHeight * 0.92;
      boxes.forEach(box => {
        const boxTop = box.getBoundingClientRect().top;
        if (boxTop < triggerBottom) {
          box.classList.add('slide-in');
        } else {
          box.classList.remove('slide-in');
        }
      });
    }
    window.addEventListener('scroll', handleSlideOnScroll);
    window.addEventListener('DOMContentLoaded', handleSlideOnScroll);
  </script>




